* {
    margin: 0;
    padding: 0;
    box-.participants-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    gap: 20px;
    margin-bottom: 30px;
}

.participant-card {
    background: linear-gradient(145deg, #0a3d79, #105db6);
    border-radius: 15px;
    padding: 20px;
    text-align: center;
    position: relative;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.participant-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
}

.participant-card.empty {
    background: rgba(10, 61, 121, 0.3);
    border: 2px dashed #4a8fe7;
}
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

body {
    background: linear-gradient(135deg, #1a2a6c, #2a4dad, #0f5699);
    color: #ffffff;
    min-height: 100vh;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
}

.join-container {
    max-width: 500px;
    margin: 100px auto;
    background: linear-gradient(145deg, #144e8c, #1e6dc8);
    padding: 30px;
    border-radius: 15px;
    text-align: center;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
}

.join-form-container {
    margin: 30px 0;
}

.room-container {
    display: none;
}

.header {
    text-align: center;
    margin-bottom: 40px;
    padding: 20px;
    background: linear-gradient(145deg, #144e8c, #1e6dc8);
    border-radius: 10px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
}

.participants-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    gap: 20px;
    margin-bottom: 30px;
}

.participant-card {
    background-color: #0f3460;
    border-radius: 10px;
    padding: 20px;
    text-align: center;
    position: relative;
}

.participant-card.empty {
    background-color: #1a1a2e;
    border: 2px dashed #2b3949;
}

.avatar {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    background-color: #052b64;
    margin: 0 auto 15px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 40px;
}

.controls {
    display: flex;
    justify-content: center;
    gap: 15px;
    margin-top: 15px;
}

.btn {
    padding: 12px 25px;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 16px;
}

.primary-btn {
    background-color: #4d6cad;
    color: white;
}

.mic-btn {
    background-color: #5c08f8;
    color: white;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.mic-btn.muted {
    background-color: #0f0f38;
}

.leave-btn {
    background-color: #4851cc;
    color: white;
}

.input-field {
    width: 100%;
    padding: 12px;
    margin: 10px 0;
    border: none;
    border-radius: 8px;
    background-color: #0f3460;
    color: white;
    font-size: 16px;
}

.volume-indicator {
    height: 4px;
    background-color: #2e92cc;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    border-radius: 0 0 10px 10px;
}

.status {
    display: inline-block;
    padding: 5px 10px;
    border-radius: 15px;
    font-size: 14px;
    margin-top: 5px;
}

.status.online {
    background-color: #02030f;
}

.status.offline {
    background-color: #6c82ff;
}

.room-link {
    background-color: #0f3460;
    padding: 15px;
    border-radius: 8px;
    margin: 20px 0;
    word-break: break-all;
}

@media (max-width: 600px) {
    .join-container {
        margin: 40px 10px;
    }

    .avatar {
        width: 70px;
        height: 70px;
        font-size: 28px;
    }
}
